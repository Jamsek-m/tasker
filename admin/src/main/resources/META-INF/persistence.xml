<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="main-jpa-unit" transaction-type="RESOURCE_LOCAL">

        <non-jta-data-source>jdbc/mainDB</non-jta-data-source>

        <class>com.mjamsek.tasker.admin.entities.Token</class>
        <class>com.mjamsek.tasker.admin.entities.TokenAction</class>
        <class>com.mjamsek.tasker.admin.entities.ConfigEntry</class>
        <class>com.mjamsek.tasker.admin.entities.LoginSession</class>
        <class>com.mjamsek.tasker.admin.entities.LogEntry</class>
        <class>com.mjamsek.tasker.admin.entities.User</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <!-- Debug values -->
            <!--<property name="hibernate.hbm2ddl.auto" value="create-drop"/>-->
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <!--<property name="hibernate.hbm2dll.import_files" value="import.sql"/>-->
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.hbm2dll.import_files" value=""/>

            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>